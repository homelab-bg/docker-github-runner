# GitHub Configuration
GITHUB_OWNER=your-username-or-org
GITHUB_REPOSITORY=your-repo-name
GITHUB_TOKEN=your-github-token

# Runner Configuration
RUNNER_NAME=local-docker-runner
RUNNER_LABELS=local,docker,self-hosted,linux,x64
RUNNER_GROUP=default
RUNNER_SCOPE=repo  # 'repo' for repository-level, 'org' for organization-level

# Optional: Runner Version
RUNNER_VERSION=2.325.0

# Optional: Resource Limits
MEMORY_LIMIT=300M
CPU_LIMIT=0.3
MEMORY_RESERVATION=128M
CPU_RESERVATION=0.25

# Optional: Development
NODE_ENV=development
LOCAL_WORKSPACE=./workspace

# Optional: SSH Key Path (for private repos)
# SSH_KEY_PATH=~/.ssh
